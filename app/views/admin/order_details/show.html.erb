<div class="container">
  <div class="row pt-5">
    <h4>注文履歴詳細</h4>
    <div class="col-md-10 pt-3 offset-md-1 pt-5">
      <%= form_with model: @order_detail, url: addresses_path do |f| %>
          <table>
            <tr>
              <th>購入者</th>
              <td></td>
              <td>
                <%= f.text_field :name, autofocus: true, autocomplete: "post_code", placeholder: "0000000"  %>
              </td>
            </tr>
            <tr>
              <th>注文日</th>
              <td></td>
              <td>
                <%= f.text_field :address, autofocus: true, size: "30x20", autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0"  %>
              </td>
            </tr>
            <tr>
              <th>配送先</th>
              <td></td>
              <td>
                <%= f.text_field :address, autofocus: true, size: "30x20", autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0"  %>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td></td>
              <td>
                <%= f.text_field :address, autofocus: true, size: "30x20", autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0"  %>
              </td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td></td>
              <td>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子"  %>
              </td>
              <td>
                <button type="submit" class="btn btn-success">更新</button>
              </td>
            </tr>
          </table>
        
        <div class="shipping_address pt-5">
          <table class="table table-bordered">
            <tr class="table-active">
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.items.name %></td>
                <td><%= order_details.purchase_price %></td>
                <td><%= order_details.amount %></td>
                <td><%= order_details.amount %></td>
                <td><%= order_details.amount %></td>
              </tr>
            <% end %>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>