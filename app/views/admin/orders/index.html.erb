<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-2"></div>
      <div>

		<h3>注文履歴一覧</h3>
		<table class="table table-bordered table-condensed">
		<tr>
			<th class="col-xs-2">購入日時</th>
			<th class="col-xs-1">購入者</th>
			<th class="col-xs-2">注文個数</th>
			<th class="col-xs-2">ステータス</th>
		</tr>
		<% @orders.each do |order|%>
		<tr>
			<td class="col-xs-3"><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
				<td><%= order.name %></td>
				<td><%= order.order_details.count %></td>
				<td><%= order.status_i18n %></td>
		<% end %>
	</table>
     </div>
    <div class="col-md-2"></div>
  </div>
</div>