<div class="container">
  <div class="row pt-5">
    <h4>注文履歴詳細</h4>
    <div class="col-md-10 pt-3 offset-md-1 pt-5">
          <table>
            <tr>
              <th>購入者</th>
              <td></td>
              <td>
                <%= link_to admin_customer_path(@order.customer) do %>
                  <%= @order.customer.last_name %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>注文日</th>
              <td></td>
              <td><%= @order.created_at.strftime('%Y/%m/%d')  %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td></td>
              <td>
                <%= @order.post_code %>
                <%= @order.address %>
              </td>
            </tr>
            <tr>
              <th></th>
              <td></td>
              <td><%= @order.name %></td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td></td>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td>
              <td>
                <%= form_with model: @order_new do |f| %>
                  <%= f.select :status, [["入金待ち"], ["入金確認"], ["制作中"], ["発送準備中"], ["発送済"]], include_blank: "選択して下さい" %>
                <% end %>
                </td>
              <td>
                <button type="submit" class="btn btn-success">更新</button>
              </td>
            </tr>
          </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-9 pt-3 offset-md-1">
        <div class="order-history">
          <table class="table table-bordered">
            <tr class="table-active">
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
            
            <% @order.order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.purchase_price %></td>
                <td><%= order_detail.amount %></td>
                <td><%= order_detail.subtotal %></td>
                <td><%= order_detail.making_status %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
      <div class="col-md-2 pt-5">
        <table>
          <tr>
            <th>商品合計</th>
            <td><%= @order.total_amount.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td></td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>