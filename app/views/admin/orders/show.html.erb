<div class="container">
  <div class="row pt-5">
    <h4>注文履歴詳細</h4>
    <div class="col-md-10 pt-3 offset-md-1 pt-5">
          <table>
            <tr>
              <th>購入者</th>
              <td>
                <%= link_to admin_customer_path(@order.customer) do %>
                  <%= @order.customer.last_name %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>注文日</th>
              <td></td>
              <td><%= @order.created_at %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td></td>
              <td><%= @order.post_code %></td>
              <td><%= @order.address %></td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td></td>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td></td>
              <td class="<%= @customer.is_deleted ? 'text-muted' : 'text-success' %>"><%= @customer.is_deleted ? '退会済み' : '有効' %></td>
              <td>
                <button type="submit" class="btn btn-success">更新</button>
              </td>
            </tr>
          </table>

        <div class="shipping_address pt-5">
          <table class="table table-bordered">
            <tr class="table-active">
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>

            <% @orders.each do |order| %>
              <tr>
                <td><%= order.items.name %></td>
                <td><%= order.order_details.purchase_price %></td>
                <td><%= order.order_details.amount %></td>
                <td><%= order_details.amount %></td>
                <td><%= order.order_details.making_status %></td>
              </tr>
            <% end %>
          </table>
        </div>
    </div>
  </div>
</div>