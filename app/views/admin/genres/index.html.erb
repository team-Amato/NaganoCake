<div class="row">
  <div class="col-md-10 col-md-offset-1">

<h3>ジャンル一覧・追加</h3>
  <div class="form-group col-md-10">
  <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>

    <td><%= f.label :"ジャンル名", class: "col-md-2" %></td>
    <td><%= f.text_field :name, class: "mr-5" %></td>
    <td><%= f.submit'新規登録',class: "btn btn-primary" %></td>

  <% end %>
  </div>

<table class="table genre-index col-md-8">
  <thead>
    <tr>
      <th>ジャンル</th>
    <tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  </div>
</div>