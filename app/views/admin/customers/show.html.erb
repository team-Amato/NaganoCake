<div class="container">
  <div class="row pt-5">
    <h4><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報詳細</h4>
    <div class="col-md-10 pt-3 offset-md-1">
      <table>
        <tr>
            <th>会員ID</th>
            <td></td>
            <td><%= @customer.id %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td></td>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td></td>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td></td>
              <td><%= @customer.post_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td></td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td></td>
              <td><%= @customer.phone_number %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td></td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td></td>
              <td class="<%= @customer.is_deleted ? 'text-muted' : 'text-success' %>"><%= @customer.is_deleted ? '退会済み' : '有効' %></td>
            </tr>
            <tr>
              <td>
                <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
                <%= link_to "注文履歴一覧を見る", root_path, class: "btn btn-primary" %>
              </td>
            </tr>
      </table>
    </div>
  </div>
</div>