<div class="container">
  <div class="row pt-5">
    <h4>会員一覧</h4>
    <div class="col-md-10 pt-3 offset-md-1 pt-5">
      <table class="table table-bordered">
        <tr class="table-active">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= customer.first_name %><%= customer.last_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td class="<%= customer.is_deleted ? 'text-muted' : 'text-success' %>"><%= customer.is_deleted ? '退会済み' : '有効' %></td>
        </tr>
        <% end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>