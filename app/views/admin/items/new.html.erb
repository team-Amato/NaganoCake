<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 mx-md-3">
      <h5>商品新規登録</h5>

      <%= form_with model: @item, url: admin_items_path, local: true, class: "xl:w-8/12 md:w-10/12", data: { turbo: false }  do |f| %>
      <%= render "admin/shared/error_messages", resource: @item %>

      <div class="col-md-5 col-md-offset-2">
        <table class="edit-form-table">
          <tbody>

            <tr>
              <td>
              商品画像
              <%= f.file_field :item_image, class: "text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %>
              </td>
            </tr>

            <tr>
              <td>
              商品名
              <%= f.text_field :name, class: "form-control" %>
              </td>
            </tr>

            <tr>
              <td>
              商品説明
              <%= f.text_area :explanation, rows: "5", class: "form-control" %>
              </td>
            </tr>

            <tr>
              <td>
              ジャンル
              <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %>
              </td>
            <tr>

            <tr>
              <td>
              税抜価格
              <%= f.text_field :price, class: "form-control" %>
              </td>
            </tr>

            <tr>
              <td>
              販売ステータス
              <%= f.radio_button :is_active,true %>
              <%= f.label :is_active,"販売中" %>
              <%= f.radio_button :is_active,false %>
              <%= f.label :is_active,"販売不可" %>
              </td>
            <tr>
         </tbody>
      </table>
        <div class="text-right">
        <%= f.submit "新規登録" ,class: "btn btn-success position:center" %>
        </div>
         <% end %>
         </div>
      </div>
    </div>
  </div>
