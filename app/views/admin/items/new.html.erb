<div class="row">
  <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <div class="row">
      <div class="col-md-5 col-xs-5">
        <h2>商品新規登録</h2>

          <%= form_with model: @item, url: admin_items_path, local: true, class: "xl:w-8/12 md:w-10/12", data: { turbo: false }  do |f| %>
          <%= render "admin/shared/error_messages", resource: @item %>

      <div class="col-md-5 col-md-offset-2 col-xs-5 col-xs-offset-2">
        <table class="new-form-table">
          <tbody>

            <tr>
              <th>商品画像</th>
              <td><%= f.file_field :item_image, class: "block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %><td>
            </tr>

            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>

            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :explanation, rows: "5", class: "form-control" %></td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            <tr>

            <tr>
              <th>税抜価格</th>
              <td><%= f.text_field :price, class: "form-control" %></td>
            </tr>

            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_active, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %></td>
            <tr>
         </tbody>
      </table>

        <div class="text-right">
        <%= f.submit "新規登録" ,class: "btn btn-primary text-right" %>
        </div>

         <% end %>
      </div>
    </div>
  </div>
</div>
</div>