<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-2"></div>
      <div>
      <h4>商品詳細</h4>
      </div>
        <div><%= image_tag @item.get_item_image(300,300) %></div>
              <div class="position-left">
                <table class="table">
                  <tbody>
                    <tr>
                      <td>商品名</td>
                      <td><%= @item.name %></td>
                    </tr>
                    <tr>
                      <td>商品説明</td>
                      <td><%= @item.explanation %></td>
                    </tr>
                    <tr>
                      <td>ジャンル</td>
                      <td><%= @item.genre.name %></td>
                    </tr>
                    <tr>
                      <td>税込価格</td>
                      <td><%= (@item.price).floor.to_s(:delimited, delimiter: ',') %>円</td>
                    </tr>
                    <tr>
                      <td>販売ステータス</td>
                      <td>
                        <% if @item.is_active %>
                          販売中
                        <% else %>
                          販売停止中
                        <% end %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              <div>
                <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
              </div>
          </div>
        <div class="col-md-2"></div>
      </div>
    </div>