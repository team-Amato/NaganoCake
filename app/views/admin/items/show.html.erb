<div class="row">
  <div class="col-md-4">
      <h2>商品詳細</h2><br>
      <%= image_tag @item.get_item_image(300,300) %>
  </div>

      <br><br><br><br>
      <div class="col-md-8">
        <table class="table">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.explanation %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格</td>
              <td><%= (@item.price).floor.to_s(:delimited, delimiter: ',') %>円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
              <% if @item.is_active %>
              販売中
              <% else %>
              販売停止中
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="col-md-offset-1 col-md-2 text-right">
          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
        </div>
      </div>
    </div>