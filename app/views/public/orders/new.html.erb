		<%= form_with(url: orders_confirm_path, method: :post) do |f| %>
			<h3>支払方法</h3>
			<!-- form.radio_button :カラム名, :保存される値(enumの番号) -->
			
			<!--クレジットカード支払い-->
      <%= f.radio_button :payment_method, Order.payment_methods.key(0),checked: "checked" %>
      <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
      <!--銀行支払い-->
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>

      <h3>お届け先</h3>
      <%= f.radio_button :status, Order.payment_methods.key() %>
      
      
      
      
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      
      

      <%= link_to orders_confirm_path do %>
          <button type="button" class="btn-primary text-center">確認画面へ進む</button>
      <% end %>
    <% end %>