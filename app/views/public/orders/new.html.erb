<div class="container p-3">
  <div class="row">
  	<div class="col-md-12">
      <h3>注文情報入力</h3>

		<%= form_with model: Order.new, url: orders_confirm_path, method: :post do |form| %>
			<h3>支払方法</h3>

			<!-- form.radio_button :カラム名, :保存される値(enumの番号) -->
			<%= form.radio_button :payment_method, "credit_card", checked: "checked" %>
	  		<%= form.label :クレジットカード %><br>
	  		<%= form.radio_button :payment_method, "transfer" %>
	  		<%= form.label :銀行振込 %>


			<h3>お届け先</h3>

			<%= form.radio_button :address_number, 1, checked: "checked" %>
			<%= form.label :ご自身の住所 %><br>
			〒<%= current_customer.post_code %><br>
			<%= current_customer.address %><br>
			<%= current_customer.last_name %>
			<%= current_customer.first_name %><br>


			<%= form.radio_button :address_number, 2 %>
			<%= form.label :登録済住所から選択 %><br>
			<!-- collection_select(プロパティ名, オブジェクトの配列, value属性の項目, テキストの項目 [, オプション])-->
			<%= form.collection_select :registered, current_customer.addresses.all, :id, :address %><br>



			<%= form.radio_button :address_number, 3 %>
			<%= form.label :新しいお届け先 %><br>
			<table>
			<tr>
			  <td><%= form.label :"郵便番号(ハイフンなし)", class: "col-xs-3 control-label"  %></td>
			  <td><%= form.text_field :post_code, class: "col-xs-4 form-control-static postal_code" %></td>
			</tr>
			<tr>
			  <td><%= form.label :"住所", class: "col-xs-3 control-label" %></td>
			  <td><%= form.text_field :address, class: "col-xs-7 form-control-static address" %></td>
			</tr>
			<tr>
			  <td><%= form.label :"宛名", class: "col-xs-3 control-label" %></td>
			  <td><%= form.text_field :name, class: "col-xs-4 form-control-static name" %></td>
			</tr>
			</table>

	   		<%= form.submit "確認画面へ進む", class: "btn btn-warning col-xs-6 col-xs-offset-1" %>
       <% end %>
    </div>
</div>
</div>

