<div class="container p-3">
  <div class="row">
  	<div class="col-md-12">
		<h3>注文履歴一覧</h3>
		<table class="table table-bordered table-condensed">
		<tr>
			<th>注文日</th>
			<th class="col-xs-3">配送先</th>
			<th class="col-xs-1">支払料金</th>
			<th class="col-xs-2">ステータス</th>
			<th class="col-xs-2">注文詳細</th>
		</tr>
		<% @orders.each do |order|%>
		<tr>
			<td class="col-xs-3"><%= order.created_at.strftime('%Y/%m/%d') %></td>
			<td class="col-xs-2">〒<%= order.post_code %><br>
				<%= order.address %><br>
				<%= order.name %>
			</td>
			<td class="col-xs-2"><%= order.total_price.to_s(:delimited, delimiter: ',') %></td>
			<td class="col-xs-2"><%= order.status_i18n %></td>
			<td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
		</tr>
		<% end %>
	</table>
	</div>
</div>
</div>