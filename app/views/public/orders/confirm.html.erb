<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
    <h3>注文情報確認</h3>
    <div class="col-xs-9">
      <table class = "table">
　  <thead>
　    <tr>
　      <th>商品名</th>
　      <th>単価(税込)</th>
　      <th>数量</th>
　      <th>小計</th>
　    </tr>
　  </thead>
　  <tbody>
        <% @cart_items.each do |cart_item| %>
        　<tr>
            <td>
              <%= image_tag cart_item.item.get_item_image(100,100) %><!--商品画像-->
              <%= cart_item.item.name %><!--商品名-->
            </td>
            <td class="tax-price", style="vertical-align:middle"><%= cart_item.item.with_tax_price.to_s(:delimited, delimiter: ',')%></td> <!--単価(税込)-->
            <td class="amount", style="vertical-align:middle"><%= cart_item.amount %></td>
            <td class="subtotal", style="vertical-align:middle">
            　<%= cart_item.subtotal.to_s(:delimited, delimiter: ',')%>
            </td> <!--小計-->
            </tr>
        <% end %>
    </tbody>
</table>
    </div>
    <div class="col-xs-3 billing">
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">配送料</th>
            <td class="text-right col-xs-5">
              <!-- sessiomのデータを表示する場合、カラム名に""つける -->
              ¥<%= @order.postage %>
            </td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">
              ¥<%= @cart_items_price .to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
            <td class="text-right">
              ¥<%= @total_price .to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
      </table>
    </div>
    <div class="col-xs-9 billing">
      <table class="table table-hover table-condensed table-bordered">
        <tr>
          <th  class="info">支払方法</th>
          <td class="text-left">
            <%= @order.payment_method_i18n %>
          </td>
        </tr>
        <tr>
          <th  class="info">お届け先</th>
          <td class="text-left">
            〒<%= @order.post_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
      </table>
      <%= form_with(model: @order, local: true) do |f| %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :post_code, :value =>@order.post_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>
      <%= f.hidden_field :payment_method, :value =>@order.payment_method %>
      <%= f.hidden_field :status, :value => @order.status %>
      <%= f.hidden_field :postage, :value => @order.postage %>
      <%= f.hidden_field :total_price, :value => @order.total_price %>
      <%= f.submit "購入を確定する", class: 'btn btn-primary col-xs-12' %>
      <% end %>
    </div>
    </div>
  </div>
</div>