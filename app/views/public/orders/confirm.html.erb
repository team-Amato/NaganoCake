<div class="row">
    <h3><strong>注文情報確認</strong></h3>
    <div class="col-xs-9">
      <table class = "table">
　  <thead>
　    <tr>
　      <th>商品名</th>
　      <th>単価(税込)</th>
　      <th>数量</th>
　      <th>小計</th>
　      <th></th>　<!--削除するボタン用-->
　    </tr>
　  </thead>

　  <tbody>
        <% @cart_items.each do |cart_item| %>
            <tr>
                <td><%= cart_item.name %></td> <!--商品名-->
                <td><%= (cart_item.price).to_s(:delimited) %></td> <!--単価(税込)-->
                <td>
                    <%= form_with model:cart_item, url:cart_item_path(cart_item.id) , local:true do |f| %>
                        <%= f.select :amount, *[1..10] %>
                        <%= f.submit "変更" , class: "btn btn-success" %>
                    <% end %>
                </td>
                <%= (cart_item.price*cart.quantity).to_s(:delimited) %></td> <!--小計-->
                <td>
                    <%= link_to cart_item_path(cart_item.id), method: :delete do %>
                        <button type="button" class="btn btn-danger text-light">削除する</button><!--削除ボタン-->
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
    </div>
    <div class="col-xs-3 billing">
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">配送料</th>
            <td class="text-right col-xs-5">
              <!-- sessiomのデータを表示する場合、カラム名に""つける -->
              ¥<%= @postage %>
            </td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">
              ¥<%= @cart_items_price .to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
            <td class="text-right">
              ¥<%= @total_price .to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
      </table>
    </div>
    <div class="col-xs-9 billing">
      <table class="table table-hover table-condensed table-bordered">
        <tr>
          <th  class="info">支払方法</th>
          <td class="text-left">
            <%= session[:order]["payment_method"] %>
          </td>
        </tr>
        <tr>
          <th  class="info">お届け先</th>
          <td class="text-left">
            <%= session[:order]["post_code"] %><br>
            <%= session[:order]["address"] %><br>
            <%= session[:order]["name"]  %>
          </td>
        </tr>
      </table>

      <%= link_to "購入を確定する", orders_thanks_path, class: 'btn btn-primary col-xs-12' %>

    </div>
</div>