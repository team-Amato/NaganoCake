    <div class="container">
      <div class = "row">
        <div class="col-3">
          <%= render 'public/searches/genre', genres: @genres %>
        </div>

        <div class="col-9">
          <h1>商品一覧</h1>(全<%= @item_counts %>件)
          <% @items.each do |item| %>
            <td><%= image_tag item.get_item_image(200,200) %></td> <br> <!--画像の表示-->
            <td>¥<%= item.price %>円</td> <br> <!--値段の表示-->
            <td><%= item.name %></td> <!--商品名の表示-->
          <% end %>
        </div>
      </div>
    </div>