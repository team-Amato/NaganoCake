<!--ジャンルのサイドバー-->
<div class="genre_search">
  <table class="table">
    <tr>
      <th class="search-box font-weight-bold">ジャンル検索</th>
    </tr>

    <%= form_with url: genre_search_path, method: :get do |f| %>
      <% genres.each do |genre| %>
        <tr>
          <td class="font-weight-bold"><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get, style: "color:#6b4033" %></td>
        </tr>
      <% end %>
    <% end %>

  </table>
</div>