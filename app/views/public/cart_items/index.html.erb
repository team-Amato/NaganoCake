<div class="container">
  <div class = "row">
  　<div class="col-12 ">
    　<h4>ショッピングカート</h4>
      <div class = "text-right">
        <%= link_to cart_items_destroy_all_path, method: :delete do %>
          <button type="button" class="btn btn-danger text-light">カートを空にする</button>
        <% end %>
      </div>
      <table class="table table-bordered">
      　<thead>
          <tr class="table-active">
        　　<th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>　<!--削除するボタン用-->
        　</tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
        　<tr>
            <td> 
              <%= image_tag cart_item.item.get_item_image(100,100) %><!--商品画像-->
              <%= cart_item.item.name %><!--商品名--> 
            </td>
            <td class="tax-price", style="vertical-align:middle"><%= cart_item.item.with_tax_price.to_s(:delimited, delimiter: ',')%></td> <!--単価(税込)-->
            <td>
            　<%= form_with model:cart_item, url:cart_item_path(cart_item.id) , local:true do |f| %>
                  <%= f.select :amount, *[1..10] %>
                  <%= f.submit "変更" , class: "btn btn-success" %>
              <% end %>
            </td>
            <td class="subtotal", style="vertical-align:middle">
            　<%= cart_item.subtotal.to_s(:delimited, delimiter: ',')%>
            </td> <!--小計-->
            <td class="delete", style="vertical-align:middle">
            　<%= link_to cart_item_path(cart_item.id), method: :delete do %>
                <button type="button" class="btn btn-danger">削除する</button><!--削除ボタン-->
            　<% end %>
            </td>
        　</tr>
          <% end %>
        </tbody>
    　</table>
        <table align="right", class="table-bordered">
        　<th class="table-active pt-2 pb-2 pr-4 pl-4">合計金額</th>
        　<td class="pt-2 pb-2 pr-5 pl-5"><%= @total.to_s(:delimited, delimiter: ',') %></td>
        </table>
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
        <div class = "text-center">
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success mt-100" %>
        </div>
　　　</div>
　　</div>
</div>