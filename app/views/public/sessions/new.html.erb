<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
          <h4>ログイン</h4>
            <h5>会員の方はこちらからログイン</h5>
            <table>
              <div class="text-left">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <tr>
                    <div class="field">
                      <td><%= f.label :メールアドレス %></td>
                      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                    </div>
                  </tr>
          
                <tr>
                  <div class="field">
                    <td><%= f.label :パスワード %>
                    <td><%= f.password_field :password, autocomplete: "current-password" %></td>
                  </div>  
                </tr>
                <tr>
                  <div class="actions", >
                     <td></td>
                     <td><%= f.submit "ログイン", class: "btn btn-primary mb-4" %></td>
                  </div>
                <% end %>
                  <tr>
                    <td><h5>会員登録がお済みでない方</h5></td>
                  <td>
                    <h5>
                      <%= link_to "こちら", new_customer_registration_path %>
                      から新規登録してください。
                    </h5>
                  </td>
                  </tr>
          </table>  
      </div>
    <div class="col-md-2"></div>
  </div>
</div>
